{
  "manifest_version": 3,
  "name": "ClankerContext",
  "version": "1.0.0",
  "description": "Generate LLM context for AI coding tools - capture bugs and enhancements with one click",
  "permissions": [
    "activeTab",
    "tabs",
    "debugger",
    "storage",
    "downloads",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
